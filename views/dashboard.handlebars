{{#if posts.length}}
{{!-- if posts are present --}}
    {{#each posts as |post|}}
{{/if}}


<div class = "row">
    <div class = "col-auto">
        <h2>{{username}}'s Dashboard</h2>
    </div>
</div>

<div class = "row mt-4">
    <div class = "col-md-6" id = "new-post">
        <h3>New Post:</h3>

        <form class = "form">
            <div class = "form-group">
                <label for="post-title">Post Title:</label>
                <input class="form-input" type = "text" id = "post-name" name = "post-name"/>
            </div>
            <div class = "form-group">
                <label for="post-content">Post Content:</label>
                <input class = "form-input" type = "textarea" id  = "post-content" name = "post-content" />
            </div>
            <div class = "form-group">
                <label for="post-date">Post Date:</label>
                <input class = "form-input" type = 'date' id = "post-date"  name = "post-date" />
            </div>
            <div class = "form-group">
                <button type = "submit" id = "dashboard-newpost">Add New Post</button>
            </div>
        </form>
    </div>

    {{#if blog.length}}
    {{!-- if posts are present --}}
        {{#each blogs as |blog|}}
        <div class="row mb-2">
        <div class="col-md-8">
            <h4><a href="/project/{{blog.id}}">{{blog.title}}</a></h4>
        </div>
        <div class="col-md-4">
            <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
        </div>
        </div>
    {{/if}}

</div>


<script src="../public/js/dashboard.js"></script>
